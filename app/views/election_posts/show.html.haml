- content_for :nav_path do
  %ol.breadcrumb
    %li
      =link_to "Home", root_path
    %li
      =link_to "Election", election_path(@election)
    %li
      =link_to "All Posts", election_election_posts_path(@election)
    %li
      =link_to "Post", election_election_post_path(@election,@election_post)


%p#notice= notice
%div.panel.panel-info
  %div.panel-heading
    ="Show Election Post"
  %div.panel-body
    %table.table
      %tr
        %td= "Election Name"
        %td=@election_post.election.name
      %tr
        %td= "State Name"
        %td=@election_post.state.name

      %tr
        %td= "Post Name"
        %td= @election_post.post.name
      %tr
        %td= "No of Post"
        %td=@election_post.no_of_post

      %tr
        %td= "Order"
        %td= @election_post.sort_order

      %tr
        %td= "Created At"
        %td= @election_post.created_at.to_formatted_s(:long)
      %tr
        %td= "Updated At"
        %td= @election_post.updated_at.to_formatted_s(:long)
        
= link_to 'Edit', edit_election_election_post_path(@election,@election_post)
\|
= link_to 'Back', election_election_posts_path(@election)

